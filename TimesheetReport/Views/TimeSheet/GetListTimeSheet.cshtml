            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>Interns</td>
                <td>Create timesheet</td>
                <td>5h</td>
                <td>
                    <button class="btn-default">Edit</button>
                    <button class="btn-default">Delete</button>
                </td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>@Html.TextBox("Project")</td>
                <td>@Html.TextBox("Task")</td>
                <td>@Html.TextBox("Hours")</td>
                <td>
                    <button class="btn-default">Save</button>
                </td>
                <td>&nbsp;</td>
            </tr>

        </tbody>
    </table>
</div>



