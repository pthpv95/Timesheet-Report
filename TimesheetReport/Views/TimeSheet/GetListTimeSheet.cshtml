
@model TimesheetReport.WebUI.ViewModels.TimeSheetViewModel

@{
    ViewBag.Title = "My Time Sheet";
    int i = 1;
}

<h2>@ViewBag.Title</h2>


@{ Html.RenderAction("FilterTimeSheet", "TimeSheet");}

<br />
<div class="accordian-body in" id="demo1" style="height: auto;">
    <table class="table table-bordered " style="border-collapse:collapse;">
        <tbody>
            <tr>
                <td><strong>No</strong></td>
                <td colspan="4"><strong>Date</strong></td>
                <td><strong>Total Hours</strong></td>
            </tr>
            @foreach (var item in Model.ListTimeSheet)
            {
                <tr>
                    <td class="hiddenRow">
                        <div><strong>@(i++)</strong></div>
                    </td>
                    <td colspan="4" class="hiddenRow">
                        <div><strong>@item.Date.ToString("MMMM dd, yyyy")</strong></div>
                    </td>
                    <td class="hiddenRow">
                        <div><strong>@(item.TotalHours + "h")</strong></div>
                    </td>
                </tr>
            }
            <tr class="row-timesheet" data-id="abc">
                <td>1</td>
